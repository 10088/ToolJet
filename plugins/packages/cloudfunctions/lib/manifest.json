{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/manifest.schema.json",
  "title": "Cloud functions datasource",
  "description": "A schema defining Cloud functions datasource",
  "type": "cloud-storage",
  "source": {
    "name": "Cloud functions",
    "kind": "cloudfunctions",
    "exposedVariables": {
      "isLoading": false,
      "data": {},
      "rawData": {}
    },
    "options": {
      "api_key": {
        "type": "string",
        "encrypted": true
      }
    }
  },
  "defaults": {
    "api_key": {
      "value": ""
    }
  },
  "properties": {
    "api_key": {
      "label": "API key",
      "key": "api_key",
      "type": "password",
      "description": "Api key for cloud functions",
      "helpText": "For generating API key, install gcloud cli and use command 'gcloud auth print-identity-token' </a>"
    }
  },
  "required": ["api_key"]
}
