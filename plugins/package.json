{
  "name": "@tooljet/plugins",
  "private": true,
  "source": "server.ts",
  "types": "dist/server.d.ts",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist/",
    "prebuild": "npm run clean",
    "build": "tsc -b",
    "create:client": "node create-client-entry",
    "create:server": "node create-server-entry",
    "prebuild:pkgs": "npm run clean:pkgs && npm run create:client && npm run create:server",
    "build:pkgs": "lerna run build --stream",
    "clean:pkgs": "lerna run clean --parallel",
    "bootstrap": "lerna clean -y && lerna bootstrap --hoist --concurrency=2"
  },
  "devDependencies": {
    "common": "./packages/common",
    "lerna": "^4.0.0",
    "jest": "^27.4.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.6.0-dev.20211222"
  }
}
